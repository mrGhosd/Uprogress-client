@import 'toolkit'

speed = .26s

:local(.Button)
  display: block
  box-sizing: border-box
  font-size: fontSmallerSize
  line-height: fontSmallerSize
  letter-spacing: 1px
  color: white
  background: uprogress-red-button-color
  border: 1px solid uprogress-red-button-color
  border-radius: 5px
  height: 40px
  width: 100%
  text-transform: uppercase
  box-shadow: none
  transition: background speed, border-color speed, color speed

  svg
    width: 24px
    height: 24px
    margin: -8px 0
    fill: white
    animation: rotating 2s infinite linear

  &:hover
    background: uprogress-red-button-dark-color

  &:active
  &:focus
    outline: none

  // &.Disabled()
  //   opacity: .3


// COLORS

  &.color-blue
    background: transparent
    border-color: uprogress-blue-button-color
    color: uprogress-blue-button-color
    &:hover
      color: white
      background: uprogress-blue-button-color

  &.color-blue-dark
    background: uprogress-blue-color
    border: none
    border-radius: 0
    &:hover
      background: uprogress-blue-button-color

  &.color-transparent-red
    background transparent
    border-color: uprogress-red-button-dark-color
    color: uprogress-red-button-dark-color
    &:hover
      color: white
      background: uprogress-red-button-dark-color

  &.color-transparent-green
    background transparent
    border-color: uprogress-green-color
    color: uprogress-green-color
    &:hover
      color: white
      background: uprogress-green-color

  &.color-transparent-blue
    background: transparent
    border-color: white
    color: white
    border-radius: 0
    &:hover
      color: uprogress-blue-color
      background: white

  &.color-blue-flat
    background: transparent
    border-color: uprogress-blue-button-color
    color: inherit
    border-radius: 0
    &:hover
      color: white
      background: uprogress-blue-button-color

  &.color-transparent-red-flat
    background: transparent
    border-color: uprogress-red-button-dark-color
    color: uprogress-red-button-dark-color
    border-radius: 0
    &:hover
      color: white
      background: uprogress-red-button-dark-color

  &.color-transparent-white
    background: white
    border-color: white
    color: uprogress-blue-button-color
    border-radius: 0
    &:hover
      color: white
      background: uprogress-blue-button-color




// HEIGHTS

  &.height-fixed
    height: 40px

  &.height-auto
    height: auto




// SIZES

  &.size-small
    width: 147px
    padding: 4px
    line-height: 1.3

  &.size-auto
    width: auto
    display: inline-block
    padding: 10px 15px
    line-height: 1.3

  &.size-big
    min-height: 60px
