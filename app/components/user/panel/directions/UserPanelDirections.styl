:local(.userPanelDirections)
  display: flex
  width: 16em
  flex-direction: column

  .title-panel
    display: flex
    flex-direction: row
    border-bottom: 1px solid #c8c8c8
    padding-bottom: 10px
    line-height: 2em
    height: 1.5em
    width: 100%

    p
      margin: 0
      margin-left: 10px

  .panel-items
    display: flex
    flex-direction: column

    .panel-item
      padding: 10px

    .empty-list
      text-align: center

  svg
    width: 30px
    height: 30px
