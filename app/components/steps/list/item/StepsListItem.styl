@import 'toolkit'

:local(.stepsListItem)
  display: flex
  flex-direction: row

  svg
    width: 30px
    height: 30px

  .step-info
    display: flex
    flex-direction: column

    .step-description
      margin: 10px

  .delete-icon,
  .edit-icon
    display: none

  &:hover
    .delete-icon,
    .edit-icon
      display: block
